            <% items.forEach((fruits) => { %>
                <li><%=fruits%></li> 
            <%  }); %>

        </ul>
    <% } else { %>

        <p>No items to display</p>

        <% } %>
    

  

    <!-- display array list here -->
    <%- htmlContent %>
